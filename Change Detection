    "import cv2\n",
    "import os"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "id": "18f53aa3",
   "metadata": {},
   "outputs": [],
   "source": [
    "time1_folder = \"data/time1\"\n",
    "time2_folder = \"data/time2\"\n",
    "output_folder = \"output\"\n",
    "\n",
    "# Create output folder if it doesn't exist\n",
    "if not os.path.exists(output_folder):\n",
    "    os.makedirs(output_folder)\n",
    "\n",
    "# Get the list of image filenames in time1_folder\n",
    "time1_images = os.listdir(time1_folder)\n",
    "\n",
    "# Iterate over each image in the time1 folder\n",
    "for image_name in time1_images:\n",
    "    # Construct the paths for time1 and time2 images\n",
    "    time1_image_path = os.path.join(time1_folder, image_name)\n",
    "    time2_image_path = os.path.join(time2_folder, image_name)\n",
    "\n",
    "    # Read the time1 and time2 images\n",
    "    time1_image = cv2.imread(time1_image_path)\n",
    "    time2_image = cv2.imread(time2_image_path)\n",
    "\n",
    "    # Perform image differencing\n",
    "    difference_image = cv2.absdiff(time1_image, time2_image)\n",
    "\n",
    "    # Save the difference image to the output folder\n",
    "    output_image_path = os.path.join(output_folder, image_name)\n",
    "    cv2.imwrite(output_image_path, difference_image)\n"
   ]
  },
